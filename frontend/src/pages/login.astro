---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/LoginForm'
import HeaderNotLogged from '../components/HeaderNotLogged.astro';
import Footer from '../components/Footer.astro';
---
<Layout title="Login ForgeHabits">
    <HeaderNotLogged/>
    <main class="max-w-7xl px-4 m-auto min-h-screen">
        <div class="bg-gradient-to-r from-gray-600 to-gray-300 h-screen flex justify-center items-center">
            <LoginForm client:load />
        </div>
    </main>
    <Footer/>
</Layout>

<!-- Script para que el usuario no pueda acceder a la página del login si está logado -> se le redirije -->
<script type="module">
    document.addEventListener('DOMContentLoaded', async () => {
        const token = sessionStorage.getItem('jwtToken');
        if (token) {
            try {
                const response = await fetch('http://localhost:3000/api/auth/status', {
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                    }
                });

                if (response.ok) {
                    console.log("Status OK -> Logado")
                    window.location.href = '/';
                }
            } catch (error) {
                console.error('Error al verificar el /status: ', error);
            }
        }
    });
</script>